{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Blackjack (g++)",
      "type": "cppbuild",
      "command": "/usr/bin/g++",
      "args": [
        "-std=c++17",
        "-Wall",
        "-g",
        "-I${workspaceFolder}/models",
        "-I${workspaceFolder}/views",
        "-I${workspaceFolder}/controllers",

        "${workspaceFolder}/models/*.cpp",
        "${workspaceFolder}/views/*.cpp",
        "${workspaceFolder}/controllers/*.cpp",

        "${workspaceFolder}/*.cpp",
        "-o",
        "${workspaceFolder}/blackjack"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Compila todo el proyecto Blackjack usando g++"
    }
  ]
}